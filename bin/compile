#!/bin/bash

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

WEB_VAULT_VERSION="$(cat $BUILD_DIR/.bitwarden-web-version)"

echo "--> Downloading bitwarden web-vault $WEB_VAULT_VERSION"

wget "https://github.com/dani-garcia/bw_web_builds/releases/download/$WEB_VAULT_VERSION/bw_web_$WEB_VAULT_VERSION.tar.gz" -O $CACHE_DIR/bw_web.tar.gz

tar xf $CACHE_DIR/bw_web.tar.gz -C $BUILD_DIR 
